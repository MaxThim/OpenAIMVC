<form action="#" style="position: relative;">
    <div style="overflow: hidden; background-color: #ffffff; border-radius: 0.5rem; border-width: 1px; border-color: #D1D5DB; box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);">
        <textarea
            rows="3"
            name="comment"
            id="comment"
            style="display: block; padding-left: 0.75rem; padding-right: 0.75rem; background-color: transparent; color: #111827; width: 100%; border-width: 0; resize: none; @@media (min-width: 640px) { padding-top: 0.375rem; padding-bottom: 0.375rem; font-size: 0.875rem; line-height: 1.25rem; line-height: 1.5rem; }; outline-color: transparent"
            placeholder="Add your question..."
            defaultValue={''}
        ></textarea>

        @*Spacer element to match the height of the toolbar*@
        <div aria-hidden="true">
            <div style="padding-top: 0.5rem; padding-bottom: 0.5rem;">
                <div style="height: 0.5rem;"></div>
            </div>
            <div style="height: 1px;"></div>
            <div style="padding-top: 0.5rem; padding-bottom: 0.5rem">
                <div style="padding-top: 1px;">
                    <div style="height: 1rem;"></div>
                </div>
            </div>
        </div>
    </div>
    <div style="position: absolute; bottom: 0; left: 1px; right: 1px;">
        <div style="display: flex; justify-content: space-between; align-items: center; padding: 0.5rem 0.75rem; border-top: 1px solid #E5E7EB; font-size: 0.875rem;">
            <div style="display: flex;">
                <button
                    type="button"
                    style="margin-top: -0.5rem; margin-left: -0.5rem; display: inline-flex; justify-content: center; align-items: center; border-radius: 9999px; padding: 0.5rem 0.75rem; color: #9CA3AF; background-color: transparent; border: none;"
                >
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" style="margin-left: -0.125rem; margin-right: 0.5rem; width: 1.25rem; height: 1.25rem;">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M8.625 9.75a.375.375 0 11-.75 0 .375.375 0 01.75 0zm0 0H8.25m4.125 0a.375.375 0 11-.75 0 .375.375 0 01.75 0zm0 0H12m4.125 0a.375.375 0 11-.75 0 .375.375 0 01.75 0zm0 0h-.375m-13.5 3.01c0 1.6 1.123 2.994 2.707 3.227 1.087.16 2.185.283 3.293.369V21l4.184-4.183a1.14 1.14 0 01.778-.332 48.294 48.294 0 005.83-.498c1.585-.233 2.708-1.626 2.708-3.228V6.741c0-1.602-1.123-2.995-2.707-3.228A48.394 48.394 0 0012 3c-2.392 0-4.744.175-7.043.513C3.373 3.746 2.25 5.14 2.25 6.741v6.018z" />
                    </svg>
                    <span style="font-style: italic; color: #6B7280;">Change instructions</span>
                </button>
            </div>
            <div style="flex-shrink: 0;">
                <button
                    type="submit"
                        style="display: inline-flex; padding-top: 0.5rem; padding-bottom: 0.5rem; padding-left: 0.75rem; padding-right: 0.75rem; background-color: #4F46E5; color: #ffffff; font-size: 0.875rem; line-height: 1.25rem; font-weight: 600; align-items: center; border-radius: 0.375rem; box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);">
                    Post
                </button>
            </div>
        </div>
    </div>
</form>

                    